{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Nodemon for Typescript",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "restart": true
    }
  ]
}
