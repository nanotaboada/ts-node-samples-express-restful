{
  "editor.rulers": [
    {
      "column": 127
    }
  ],
  "editor.wordWrapColumn": 127,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "git.autofetch": true,
  "git.autorefresh": true,
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "yaml.schemas": {
    "https://github.com/actions/schema/blob/main/schema.json": [".github/workflows/*.yml"]
  }
}
