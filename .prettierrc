{
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 127,
    "overrides": [
        {
            "files": [
                "*.json",
                "*.yaml",
                "*.yml"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto"
}